	Label2.Text = wt.givedtlist(1) & CRLF & "temperatura:" & wt.givetemp(1) & CRLF & wt.givedescription(1) 
	Label3.Text = wt.givedtlist(2) & CRLF & "temperatura:" & wt.givetemp(2) & CRLF & wt.givedescription(2) 
	Label4.Text = wt.givedtlist(3) & CRLF & "temperatura:" & wt.givetemp(3) & CRLF & wt.givedescription(3) 
	
	imgWeather1.Bitmap = LoadBitmap(File.DirAssets, wt.giveicon(0))
	imgWeather2.Bitmap = LoadBitmap(File.DirAssets, wt.giveicon(1))
	imgWeather3.Bitmap = LoadBitmap(File.DirAssets, wt.giveicon(2))
	imgWeather4.Bitmap = LoadBitmap(File.DirAssets, wt.giveicon(3))
End Sub


